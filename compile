#!/bin/sh

file=$(readlink -f "$1")
dir=$(dirname "$file")
base="${file%.*}"
shebang=$(sed -n 1p "$file")

cd "$dir" || exit

case "$file" in
    *.ms) groff -ms "$file" > "$base".ps;;
    *.md) pandoc --pdf-engine=xelatex --bibliography ./main.bib --filter pandoc-include-code --listings --verbose "$file" -o "$base".pdf;;
    *.markdown) pandoc -t beamer --pdf-engine=xelatex --verbose "$file" -o "$base".pdf;;
    *.tex) latexmk -pdf $file;;
    *.puml) plantuml -tutxt "$file"
            plantuml -tpng "$file"
	    ;;
esac
